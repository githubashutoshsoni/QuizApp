<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:padding="8dp">


        <CheckBox
            android:id="@+id/choice_chip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_btn_bg"
            android:buttonTint="@color/checkbox_selector"
            android:checked="true"

            android:gravity="center"
            android:maxLines="2"
            android:padding="8dp"
            android:scaleX="1"
            android:scaleY="1"
            android:textAppearance="?attr/textAppearanceButton"
            app:layout_constraintEnd_toEndOf="@id/end_guide_line"
            app:layout_constraintStart_toStartOf="@id/start_guide_line"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Choice 1" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>



